<header>
  <div class="adventure-title"> Text Adventures </div>
  <ul>
    <li><%= button_to "Add New Adventure", new_adventure_path, :method => :get %></li>
    <li class="or"> or </li>
    <li><%= render "libraries/form" %></li>
  </ul>
</header>

<div class="container adventures-body">
  <% @adventures.each do |adventure| %>
    
    <div class="each-item">
      <%= link_to adventure.title, adventure_path(adventure) %> by
      <%= adventure.author %>  
      <% if adventure.library_id == nil %>
        a local adventure
      <% else %>
        <% library = Library.find(adventure.library_id) %>
        from <%= link_to library.url, library.url %>

      <% end %>

    </div>

  <% end %>
</div>